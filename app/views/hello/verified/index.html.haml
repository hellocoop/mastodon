- content_for :page_title do
  = "Welcome #{display_name(@account)}"

.admin-wrapper
  .content

    %div{ 'tabindex': '-1', 'inert': true, 'aria-hidden': true, class: 'flex-all ml-8' }
      = render_symbol :wordmark

    .form-container
      %form.simple_form.text-center

        .fields-group
          %h1.title.mb-0.leading-none.text-4xl Welcome
          %h2.mb-0.leading-none.mt-3.verified-modifier
            = display_name(@account, custom_emojify: true)

        .fields-group.my-12
          %h3.mb-0.leading-none.text-lg.font-medium you now have
          %h2.mb-0.leading-none.mt-3
            = acct(@account)

        .fields-group
          %h3.mb-0.leading-none.text-lg.font-medium to complete your profile
          %a{ href: @mastodon_builder_url, class: 'button mt-3 text-lg p-4' }
            ō&nbsp;&nbsp;&nbsp;Continue with Hellō Mastodon Builder
